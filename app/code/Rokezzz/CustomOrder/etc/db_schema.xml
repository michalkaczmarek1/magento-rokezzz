<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="type_order" resource="default" engine="innodb" comment="Type Order Table">
        <column xsi:type="int" name="type_order_id" unsigned="true" nullable="false" identity="true"
                comment="Type Order ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="60" default="Standardowe" comment="Name"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="type_order_id"/>
        </constraint>
    </table>
    <table name="sales_order">
        <column xsi:type="int" name="type_order_id" unsigned="true" nullable="true" comment="Type Order ID"/>
        <constraint xsi:type="foreign" referenceId="SALES_ORDER_TYPE_ORDER_ID_TYPE_ORDER_TYPE_ORDER_ID"
                    table="sales_order" column="type_order_id" referenceTable="type_order"
                    referenceColumn="type_order_id" onDelete="CASCADE"/>
    </table>
    <table name="sales_order_grid">
        <column xsi:type="int" name="type_order_id" unsigned="true" nullable="true" comment="Type Order ID"/>
        <constraint xsi:type="foreign" referenceId="SALES_ORDER_GRID_TYPE_ORDER_ID_TYPE_ORDER_TYPE_ORDER_ID"
                    table="sales_order_grid" column="type_order_id" referenceTable="type_order"
                    referenceColumn="type_order_id" onDelete="CASCADE"/>
    </table>
</schema>
